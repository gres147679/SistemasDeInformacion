<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd"> 
 
<struts>
    <constant name="struts.enable.DynamicMethodInvocation"
        value="false" />
    <constant name="struts.devMode" value="false" />
    <constant name="struts.custom.i18n.resources"
        value="ApplicationResources" />
 
    <package name="default" extends="struts-default" namespace="/">
        <action name="login" class="net.excelsior.Authentication.LoginAction">
            <result name="successProfessor">WelcomeAgregar.jsp</result>
            <result name="successDpto">WelcomeDpto.jsp</result>
            <result name="error">Login.jsp</result>
        </action>
        <action name="logout" method="logout" class="net.excelsior.Authentication.LoginAction">
            <result name="success">Login.jsp</result>
        </action>
    </package>
    
    <package name="default2" extends="hibernate-default">
		<action name="saveOrUpdateTitulo" method="saveOrUpdate" class="net.excelsior.web.TituloAction">
			<result name="input" type="redirect">listTitulo</result>
			<result name="success">/gestionarFormacion.jsp</result>
		</action>
		<action name="listTitulo" method="list" class="net.excelsior.web.TituloAction">
		    <interceptor-ref name="basicStackHibernate" />
			<result name="success">/gestionarFormacion.jsp</result>
		</action>
		<action name="editTitulo" method="edit" class="net.excelsior.web.TituloAction">
			<interceptor-ref name="basicStackHibernate" />
			<result name="success">/gestionarFormacion.jsp</result>
		</action>
		<action name="deleteTitulo" method="delete" class="net.excelsior.web.TituloAction">
		    <interceptor-ref name="basicStackHibernate" />
			<result name="success" type="redirect">listTitulo</result>
		</action>
	</package>
	
	<package name="default3" extends="hibernate-default">
		<action name="saveOrUpdateMaterialApoyo" method="saveOrUpdate" class="net.excelsior.web.MaterialApoyoAction">
			<result name="input">/gestionarMaterial.jsp</result>
			<result name="success" type="redirect">listMaterialApoyo</result>
		</action>
		<action name="listMaterialApoyo" method="list" class="net.excelsior.web.MaterialApoyoAction">
			<result name="success">/gestionarMaterial.jsp</result>
		</action>
		<action name="editMaterialApoyo" method="edit" class="net.excelsior.web.MaterialApoyoAction">
			<result name="success">/gestionarMaterial.jsp</result>
		</action>
		<action name="deleteMaterialApoyo" method="delete" class="net.excelsior.web.MaterialApoyoAction">
			<result name="success" type="redirect">listMaterialApoyo</result>
		</action>
	</package>
    
    <package name="titles" extends="struts-default" namespace="/">
    	<action name="mostrarInfoProfAction" method="execute"
            class="net.excelsior.InformacionProfesor.ShowInfoAction">
            <result name="success">ListarInfoProf.jsp</result>
            <result name="error">WelcomeAgregar.jsp</result>
        </action>
        <action name="insertarTituloAction" method="execute"
            class="net.excelsior.InformacionProfesor.InsertInfoProfesor">
            <result name="success">WelcomeAgregar.jsp</result>
            <result name="error">WelcomeAgregar.jsp</result>
        </action>
        <action name="eliminarTituloAction" method="execute"
            class="net.excelsior.InformacionProfesor.DeleteInfoProfesor">
            <result name="success">WelcomeAgregar.jsp</result>
            <result name="error">WelcomeAgregar.jsp</result>
        </action>
        <action name="actualizarTituloAction" method="execute"
            class="net.excelsior.InformacionProfesor.UpdateInfoProfesor">
            <result name="success">WelcomeAgregar.jsp</result>
            <result name="error">WelcomeAgregar.jsp</result>
        </action>
    </package>
    
    <package name="resources" extends="struts-default" namespace="/">
        <action name="insertarMaterialAction" method="execute"
            class="net.excelsior.InformacionProfesor.InsertMaterialProfesor">
            <result name="success">WelcomeAgregar.jsp</result>
            <result name="error">WelcomeAgregar.jsp</result>
        </action>
        <action name="eliminarMaterialAction" method="execute"
            class="net.excelsior.InformacionProfesor.DeleteMaterialProfesor">
            <result name="success">WelcomeAgregar.jsp</result>
            <result name="error">WelcomeAgregar.jsp</result>
        </action>
        <action name="actualizarTituloAction" method="execute"
            class="net.excelsior.InformacionProfesor.UpdateMaterialProfesor">
            <result name="success">WelcomeAgregar.jsp</result>
            <result name="error">WelcomeAgregar.jsp</result>
        </action>
        <action name="insertarProgramaAction" method="execute"
            class="net.excelsior.InformacionProfesor.InsertProgramaProfesor">
            <result name="success">WelcomeAgregar.jsp</result>
            <result name="error">WelcomeAgregar.jsp</result>
        </action>
        <action name="eliminarProgramaAction" method="execute"
            class="net.excelsior.InformacionProfesor.DeleteProgramaProfesor">
            <result name="success">WelcomeAgregar.jsp</result>
            <result name="error">WelcomeAgregar.jsp</result>
        </action>
        <action name="actualizarProgramaAction" method="execute"
            class="net.excelsior.InformacionProfesor.UpdateProgramaProfesor">
            <result name="success">WelcomeAgregar.jsp</result>
            <result name="error">WelcomeAgregar.jsp</result>
        </action>
    </package>
</struts>